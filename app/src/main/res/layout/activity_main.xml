<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cofc.buildingblocks.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! adkfd adkfdi dfdied dkfdieidld dfkdfoweisd dijfeo ideoidnf ldk efeoifne oifndkf lllllllll lllllllllll lllllllll"
        android:lines="2"
        android:ems="15"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.kabriggs.people.cofc.edu"
        android:lines="2"
        android:ems="15"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:hint="Click Me"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-843-555-1234"
        android:autoLink="phone"
        android:hint="Call me"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/input_filtered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type here"
        android:lines="4" />
</RelativeLayout>
